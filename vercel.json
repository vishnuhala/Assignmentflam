{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["client/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "/index.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|eot|otf))",
      "dest": "/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}